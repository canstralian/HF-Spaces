# .flake8

[flake8]
# Specify the maximum allowed line length
max-line-length = 88

# Exclude specific directories from linting
exclude =
    .git,
    __pycache__,
    build,
    dist

# Ignore specific error/warning codes
ignore =
    E203,  # Whitespace before ':'
    E266,  # Too many leading '#' for block comment
    E501,  # Line too long (handled by max-line-length)
    W503   # Line break occurred before a binary operator

# Enable specific error/warning codes (if any)
# extend-ignore =

# Specify the format for the output (optional)
format = default

# Set the maximum allowed McCabe complexity
max-complexity = 10

# Select specific error/warning codes (if you want to focus on certain checks)
# select =

# Define any additional plugins (if used)
# plugin = 
